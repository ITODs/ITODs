<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".activity.InformationActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:textColor="@color/DimGray"
            android:textSize="25dp"
            android:text="“对你的初步了解”"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_username"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/textview_information_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/CornflowerBlue"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:text="您的姓名" />
        <EditText
            android:id="@+id/edittext_information_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/White"
            android:hint="请填写"
            android:textColor="@color/DarkOrange"
            android:textSize="14sp"
            android:gravity="right"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Seashell"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_sex"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/textview_information_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/CornflowerBlue"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:text="您的性别" />
        <TextView
            android:id="@+id/edittext_information_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:background="@color/White"
            android:textSize="14sp"
            android:textColor="@color/DarkOrange"
            android:hint="请选择"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Seashell"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src ="@mipmap/icon_tel"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/textview_information_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/CornflowerBlue"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:text="您的手机" />
        <TextView
            android:id="@+id/edittext_information_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/White"
            android:text="1562543****"
            android:textColor="@color/DarkOrange"
            android:textSize="14sp"
            android:gravity="right"
            android:inputType="number" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Seashell"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src ="@mipmap/icon_city"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/textview_information_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/CornflowerBlue"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:text="所在城市" />
        <TextView
            android:id="@+id/edittext_information_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/White"
            android:hint="请选择"
            android:textColor="@color/DarkOrange"
            android:textSize="14sp"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Seashell"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_login"
            android:text="一键提交"
            android:textColor="@color/White"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_jump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="选择跳过"
            android:textColor="@color/DarkOrange"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>
