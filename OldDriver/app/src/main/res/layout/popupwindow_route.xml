<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popurwindow_background"
    android:id="@+id/popup_route_layout">
    <!--第一层-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/location_current"/>
        <TextView
            android:id="@+id/textview_Highway_Condition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="老司机路线"
            android:textColor="@color/DodgerBlue"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/textview_if_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="登录后上报有奖 》"
            android:textSize="12dp"
            android:textColor="@color/DarkOrange"/>
    </LinearLayout>
    <!--第二层-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/plan_dis_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/route_dis_first_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【最短路线】"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/route_dis_first_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35分钟"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/route_dis_first_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="29.5公里"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/plan_time_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/route_time_first_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【用时最少】"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/route_time_first_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35分钟"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/route_time_first_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="29.5公里"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/plan_fee_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/route_fee_first_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【费用最小】"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/route_fee_first_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35分钟"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/route_fee_first_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="29.5公里"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/plan_way_detail"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_background_count"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红绿灯数:"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/route_num_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textColor="@color/OrangeRed"/>
        </LinearLayout>
        <!--<LinearLayout-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:gravity="center_horizontal">-->
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="打车费用:"-->
                <!--android:id="@+id/textview_taxi_price"-->
                <!--android:textSize="12sp"/>-->
            <!--<TextView-->
                <!--android:id="@+id/route_cost"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="11"-->
                <!--android:textColor="@color/OrangeRed"/>-->
        <!--</LinearLayout>-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拥堵路段:"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/route_num_jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textColor="@color/OrangeRed"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/route_current_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/location"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="实时位置"
                android:layout_marginLeft="3dp"
                android:textSize="14sp"
                android:textColor="@color/DodgerBlue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/DodgerBlue"
            android:layout_gravity="center_vertical">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/route_start_navi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/navigationt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="开始导航"
                android:layout_marginLeft="3dp"
                android:textSize="14sp"
                android:textColor="@color/CornflowerBlue"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>